{
  "name": "repo-util",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "operate on remote repositories",
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "repo-util": "src/repo-util-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "aggregation-repository-provider": "^5.3.12",
    "bitbucket-repository-provider": "^4.4.21",
    "commander": "^9.4.1",
    "etag-cache-leveldb": "^1.4.1",
    "gitea-repository-provider": "^2.4.19",
    "github-repository-provider": "^7.33.18",
    "leveldown": "^6.1.1",
    "levelup": "^5.1.1",
    "local-repository-provider": "^8.1.5",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "ava": "^5.1.0",
    "c8": "^7.12.0",
    "execa": "^6.1.0",
    "semantic-release": "^19.0.5"
  },
  "engines": {
    "node": ">=18.12.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/repo-util.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/repo-util/issues"
  },
  "homepage": "https://github.com/arlac77/repo-util#readme",
  "release": {
    "branches": [
      "master",
      "next"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-node-app"
    ]
  }
}

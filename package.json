{
  "name": "repo-util",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "description": "operate on remote repositories",
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "repo-util": "src/repo-util-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs"
  },
  "dependencies": {
    "aggregation-repository-provider": "^7.0.3",
    "bitbucket-repository-provider": "^6.0.29",
    "commander": "^12.1.0",
    "etag-cache-leveldb": "^2.1.4",
    "gitea-repository-provider": "^4.2.5",
    "github-repository-provider": "^9.0.21",
    "leveldown": "^6.1.1",
    "levelup": "^5.1.1",
    "repository-provider-cli-support": "^2.2.5"
  },
  "devDependencies": {
    "ava": "^6.1.3",
    "c8": "^10.1.2",
    "documentation": "^14.0.3",
    "execa": "^9.3.1",
    "semantic-release": "^24.1.0"
  },
  "engines": {
    "node": ">=22.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/repo-util.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/repo-util/issues"
  },
  "homepage": "https://github.com/arlac77/repo-util#readme",
  "release": {
    "branches": [
      "master",
      "next"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-node-app"
    ]
  }
}
